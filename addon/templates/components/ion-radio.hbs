<ion-item type="radio" as |section|>
  {{#if section.content}}
    {{input type='checkbox' name='radio-group' checked=attrs.checked}}
    <div class="item-content disable-pointer-events">
      <span>{{yield}}</span>
    </div>
    <i class="radio-icon disable-pointer-events icon ion-checkmark"></i>
  {{/if}}
</ion-item>
